{{> navigation/authNavigation}}
<div class="content">
  <div class="focused-content">
    <div class="focused-content__close">
      <a href="/"><i class="fas fa-times"></i></a>
    </div>
    <h1 class="focused-content__title">Login in Vimo</h1>
    <div class="focused-content__action">
      <button class="button button--mail">Login with mail <i class="fas fa-envelope"></i></button>
      <form action="/auth/login" method="POST" id="form" class="form">
        <div class="form__group">
          <label for="username">Username</label>
          <input id="username" type="text" name="username" placeholder="Your username">
        </div>
        <div class="form__group">
          <label for="password">Password</label>
          <input id="password" type="password" name="password" placeholder="Your password">
        </div>
        {{#if message }}
          <div class="form__message">{{ message }}</div>
        {{/if}}
        <div class="form__submitting">
          <a href="/auth/login" class="button button--send">Login</a>
          <a href="/auth/signup">Do not have an account? Sign up!</a>
        </div>
      </form>
      <a href="/auth/instagram" class="button button--instagram">Login with Instagram <i class="fab fa-instagram"></i></a>
      <a href="/auth/facebook" class="button button--facebook">Login with Facebook <i class="fab fa-facebook-square"></i></a>
    </div>
  </div>
</div>

<script src="/javascripts/image-grid.js"></script>